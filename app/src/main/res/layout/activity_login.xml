<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="np.com.aawaz.csitentrance.Activities.LoginActivity">

    <RelativeLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/fabBtn"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:text="Sign In"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#41837E" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/NameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginRight="16dp"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="textPersonName|textCapWords"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#009866" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/LastText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/NameText"
                    android:layout_alignLeft="@+id/NameText"
                    android:layout_alignRight="@+id/NameText"
                    android:layout_alignStart="@+id/NameText"
                    android:layout_below="@+id/NameText"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Last Initial"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="1"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#009866" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:layout_alignEnd="@+id/LastText"
                    android:layout_alignLeft="@+id/LastText"
                    android:layout_alignRight="@+id/LastText"
                    android:layout_alignStart="@+id/LastText"
                    android:layout_below="@+id/LastText"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="E-mail"
                    app:met_floatingLabel="normal" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/email"
                    android:layout_below="@+id/email"
                    android:layout_marginTop="25dp"
                    android:text="Choose Avatar"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#41837E" />


                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/a1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/one" />

                            <ImageView

                                android:id="@+id/a2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/two" />

                            <ImageView
                                android:id="@+id/a3"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/three" />

                            <ImageView
                                android:id="@+id/a4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/four" />

                            <ImageView
                                android:id="@+id/a5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/five" />

                            <ImageView
                                android:id="@+id/a6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/six" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/a7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/seven" />

                            <ImageView
                                android:id="@+id/a8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/eight" />

                            <ImageView
                                android:id="@+id/a9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/nine" />

                            <ImageView
                                android:id="@+id/a10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ten" />

                            <ImageView
                                android:id="@+id/a11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/eleven" />

                            <ImageView
                                android:id="@+id/a12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/twelve" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/fabBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="invisible"
                    app:fab_colorNormal="#eee"
                    app:fab_colorPressed="#ddd" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reqularLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark3"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/splash_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Your key to CSIT Entrance."
                android:textColor="@color/toolbar_color"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
