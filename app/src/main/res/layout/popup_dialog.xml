<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/white">

    <ViewSwitcher
        android:id="@+id/viewSwitcherPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/image_ad_popup"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/samriddhi" />

                    <TextView
                        android:id="@+id/popup_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="Sagarmatha College of Science and Technology"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/popup_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="Sanepa, Lalitpur"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/popup_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="XYZ college announces admission open for the 2074 intake of the BSc CSIT program. Pursue your career with the Nepal's best IT course offered by TU.\n\nHurry up and book your seat now.\n Call now at 01-5527274" />

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/call_popup"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/call_blue"
                    android:gravity="center"
                    android:text="Call Now"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/popup_knowmore"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/more"
                    android:gravity="center"
                    android:text="Know More"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/closePopup"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/close"
                    android:gravity="center"
                    android:text="Close"
                    android:textColor="@color/physics" />
            </LinearLayout>
        </LinearLayout>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </ViewSwitcher>
</android.support.v7.widget.CardView>