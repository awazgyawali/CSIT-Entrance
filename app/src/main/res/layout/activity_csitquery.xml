<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="np.com.aawaz.csitentrance.Activities.CSITQuery">

    <android.support.v7.widget.Toolbar
        android:id="@+id/queryToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary5"
        android:theme="@style/Theme.AppCompat" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/queryToolbar"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyQuery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".66" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#009866" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Your Query here." />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="sendSms"
                android:text="Send" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
