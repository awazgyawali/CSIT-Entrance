<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coreResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EntranceResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/viewResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Result is live now."
                    android:textColor="@color/green"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/relativeLayout2"
                    android:layout_below="@+id/textView7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Please enter your Roll no to view your result."
                    android:textColor="#888888"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">


                    <EditText
                        android:id="@+id/resultRollNo"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:hint="Roll No"
                        android:inputType="phone"
                        android:textColor="#888888"
                        android:textSize="15sp" />


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/resultReqButton"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/resultRollNo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:padding="13dp"
                        fancy:fb_defaultColor="#f0f0f0"
                        fancy:fb_focusColor="#ddd"
                        fancy:fb_radius="5dp"
                        fancy:fb_text="Submit"
                        fancy:fb_textColor="#888888" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/unPublished"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:text="Result has not been published.\n\n Please stay tuned.\nWe will notify you as soon as the result has been published.."
                android:textColor="@color/primary9"
                android:textSize="20sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/adImage"/>
    </LinearLayout>
</RelativeLayout>
