<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="np.com.aawaz.csitentrance.activities.ReadNews">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/parentNews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:theme="@style/Theme.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.CardView
                android:id="@+id/fullNewsCore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/eachNewsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Demo Title"
                            android:textColor="@color/primary4"
                            android:textSize="17dp" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/eachNewsTitle"
                            android:background="@color/toolbar_color" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/divider"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/newsImage"
                                android:layout_width="wrap_content"
                                android:layout_height="300dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp" />

                            <TextView
                                android:id="@+id/newsSubTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="right"
                                android:text="hello" />


                            <TextView
                                android:id="@+id/newsContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textAlignment="inherit" />

                            <Button
                                android:id="@+id/linkButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Hello"
                                android:textColor="@color/primary9" />

                            <TextView
                                android:id="@+id/newsAuthor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="5dp"
                                android:text="Aawaz Gyawali"
                                android:textColor="#000" />


                        </LinearLayout>

                    </RelativeLayout>

                </ScrollView>

            </android.support.v7.widget.CardView>

            <com.google.android.gms.ads.AdView
                android:id="@+id/eachNewsAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                ads:adSize="BANNER"
                ads:adUnitId="@string/full_news_banner" />
        </LinearLayout>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/fullNewsToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary9"
                android:theme="@style/Theme.AppCompat"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways" />

            <View
                android:id="@+id/appbar_bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:visibility="invisible" />
        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>


