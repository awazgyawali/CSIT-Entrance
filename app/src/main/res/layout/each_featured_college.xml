<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewFeatured"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/students"
                    android:scaleType="centerCrop" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewCollegeProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tu"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="1dp" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/titleFeatured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewFeatured"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/imageViewCollegeProfile"
                    android:layout_toRightOf="@+id/imageViewCollegeProfile"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:text="Tinau Technical College"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:typeface="roboto_bold" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/addressFeatured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/titleFeatured"
                    android:textColor="@color/colorAccent"
                    android:layout_alignStart="@+id/titleFeatured"
                    android:layout_below="@+id/titleFeatured"
                    android:text="Tilottama-2, Janakinagar" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/detailFeatured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/addressFeatured"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="We provide high quality education in affordable price. To know more just call us, we are here to to help you."
                    android:textColor="#727272" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#727272" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/callFeatured"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/call"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Call Now"
                    android:textColor="@color/colorPrimaryText" />


                <TextView
                    android:id="@+id/websiteFeatured"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/website"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Open Website"
                    android:textColor="@color/colorPrimaryText" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>