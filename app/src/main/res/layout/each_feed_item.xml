<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/forumPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/account_holder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/post_admin_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="3dp"
            app:layout_constraintEnd_toStartOf="@+id/editIcon"
            app:layout_constraintTop_toTopOf="@+id/postedBy"
            fancy:fb_borderColor="@color/admin_color"
            fancy:fb_defaultColor="@color/transparent"
            fancy:fb_text="ADMIN"
            fancy:fb_textColor="@color/colorAccent"
            fancy:fb_textSize="12sp" />

        <TextView
            android:id="@+id/postedBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Aawaz Gyawali"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/forumPic"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/vertical_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="2 comments"
            android:textColor="@color/colorSecondaryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/realPost"
            app:layout_constraintTop_toBottomOf="@+id/realPost" />

        <TextView
            android:id="@+id/forumTime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="14 days ago "
            android:textColor="@color/colorSecondaryText"
            app:layout_constraintLeft_toRightOf="@+id/forumPic"
            app:layout_constraintStart_toStartOf="@+id/postedBy"
            app:layout_constraintTop_toBottomOf="@+id/postedBy" />

        <TextView
            android:id="@+id/realPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            android:ellipsize="end"
            android:fontFamily="@font/work_sans_medium"
            android:gravity="center_vertical"
            android:text="Demo  dsjkdsjkds dsdsdsdskldslkdsklkldsklsdkjdskjdsdsjksddjskni hagi"
            android:textColor="@color/colorPrimaryText"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/forumTime"
            app:layout_constraintTop_toBottomOf="@+id/forumTime" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
