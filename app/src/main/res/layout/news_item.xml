<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.Card xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="-3dp"
    android:layout_marginBottom="-3dp"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo Title"
        android:textSize="17dp"
        android:id="@+id/newsTitle"
        android:textColor="#3a88cd"
        android:layout_toLeftOf="@+id/time"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo content"
        android:maxLines="2"
        android:paddingBottom="5dp"
        android:id="@+id/themeNews"
        android:layout_below="@+id/newsTitle"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time and day"
        android:id="@+id/time"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>
</com.gc.materialdesign.views.Card>
