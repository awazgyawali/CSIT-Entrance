<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat"
    tools:context="np.com.aawaz.csitentrance.Activities.Colleges">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarColz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary8" >
        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/abc_ic_search_api_mtrl_alpha"
            android:hint="Search"
            android:padding="10dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/colzRecy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/colzAd"
        android:layout_below="@+id/toolbarColz" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/colzAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/colleges_ad_id" />


</RelativeLayout>
